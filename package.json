{
  "name": "@dotbox",
  "author": "Jake Hamilton <jake.hamilton@hey.com>",
  "description": "",
  "keywords": [],
  "license": "",
  "private": true,
  "scripts": {
    "bootstrap": "titan install",
    "bootstrap:changed": "titan install --changed --with-deps",
    "build": "titan run build",
    "build:changed": "titan run build --changed --with-deps",
    "test": "titan run test",
    "test:changed": "titan run test --changed --with-deps",
    "publish": "titan publish"
  },
  "titan": {
    "packages": [
      "./packages"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json,ts,tsx,js,jsx,mjs}": "prettier --write"
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": true
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@jakehamilton/titan": "^5.11.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1"
  }
}
