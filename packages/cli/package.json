{
    "name": "@dotbox/cli",
    "version": "1.0.0",
    "description": "A simple, easily readable configuration language.",
    "main": "dist/index.cjs.js",
    "types": "dist/index.d.ts",
    "bin": {
        "dotbox": "./bin/dotbox.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "npm run build:lib && npm run build:types",
        "build:lib": "vite build",
        "build:types": "tsc -p . --emitDeclarationOnly"
    },
    "keywords": [
        "box",
        "config",
        "language",
        "json",
        "compiler"
    ],
    "author": "Jake Hamilton <jake.hamilton@hey.com>",
    "license": "Apache-2.0",
    "devDependencies": {
        "vite": "^2.9.5",
        "builtin-modules": "^3.2.0",
        "vite-plugin-commonjs-externals": "^0.1.1",
        "lodash": "^4.17.21",
        "@types/lodash": "^4.14.182",
        "rimraf": "^3.0.2",
        "typescript": "^4.6.3",
        "@types/node": "^17.0.30"
    },
    "dependencies": {
        "@dotbox/compiler": "1.0.0",
        "@dotbox/format": "1.0.0",
        "@littlethings/log": "^3.0.3",
        "arg": "^5.0.1",
        "kleur": "^4.1.4"
    },
    "homepage": "https://github.com/jakehamilton/dotbox",
    "repository": {
        "type": "git",
        "url": "https://github.com/jakehamilton/dotbox.git"
    },
    "bugs": {
        "url": "https://github.com/jakehamilton/dotbox/issues"
    }
}
