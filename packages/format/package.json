{
    "name": "@dotbox/format",
    "version": "1.0.1",
    "description": "A library for formatting DotBox files.",
    "main": "dist/index.cjs.js",
    "types": "dist/index.d.ts",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist/**/*",
        "CHANGELOG.md"
    ],
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "npm run build:lib && npm run build:types",
        "build:lib": "vite build",
        "build:types": "tsc -p . --emitDeclarationOnly",
        "test": "vitest"
    },
    "keywords": [
        "box",
        "config",
        "language",
        "json",
        "compiler"
    ],
    "author": "Jake Hamilton <jake.hamilton@hey.com>",
    "license": "Apache-2.0",
    "devDependencies": {
        "vite": "^2.9.5",
        "builtin-modules": "^3.2.0",
        "vite-plugin-commonjs-externals": "^0.1.1",
        "lodash": "^4.17.21",
        "@types/lodash": "^4.14.182",
        "rimraf": "^3.0.2",
        "typescript": "^4.6.3",
        "vitest": "^0.10.0",
        "@types/node": "^17.0.25"
    },
    "dependencies": {
        "@dotbox/compiler": "1.0.1",
        "@littlethings/coder": "^1.1.2"
    },
    "homepage": "https://github.com/jakehamilton/dotbox",
    "repository": {
        "type": "git",
        "url": "https://github.com/jakehamilton/dotbox.git"
    },
    "bugs": {
        "url": "https://github.com/jakehamilton/dotbox/issues"
    }
}
